{{!< default}}


{{#post}}
              
<article class="{{post_class}}">

<header class="masthead3" style="background-image: url({{img_url feature_image}})">
     {{!-- <div class="overlay3"></div> --}}
</header>

  <header class="post-header">
     <div class="container has-text-centered">
         <br>
<div class="subtitle is-6 has-text-weight-bold">
                   <time class="post-date" datetime="{{date format='YYYY-MM-DD'}}">
        {{date format="DD MMMM YYYY"}}
      </time>
</div>
      <br>
    <h1 class="post-title title is-1 has-text-weight-bold">{{title}}</h1>
    <br>
        <section class="post-meta">
            <div class="subtitle is-6 has-text-weight-light">
                   {{tags}}
            </div>
    </section>  
    </div>

  </header>
  <section class="container">
<div class="columns is-centered">

<div class="column is-three-fifths">

  <div class="content is-large has-text-justified">
      <br>
          {{content}}
  </div>

</div>

</div>
  </section>     
</article>
<br>
<br>
<section class="container-fluid">

<div class="columns is-gapless">
   {{#prev_post}}
<div class="column">
 
    <a href="{{url}}">
<header class="masthead4" style="background-image: url({{img_url feature_image}})">
     <div class="overlay4"></div>
     <div class="middle-div">
<h1 class="title is-3 has-text-white">{{title}}</h1>
     </div>
     </header>
     </a>
   

</div>
{{else}}
  {{/prev_post}}


 {{#next_post}}
<div class="column">
   
    <a href="{{url}}">
<header class="masthead4" style="background-image: url({{img_url feature_image}})">
     <div class="overlay4"></div>
          <div class="middle-div">
<h1 class="title is-3 has-text-white">{{title}}</h1>
     </div>
     </header>
     </a>
    
</div>
{{else}}
 {{/next_post}}
</div>

</section>




{{!-- AUTHOR SECTION --}}


  {{#primary_author}}
  <section>
<header class="masthead5" style="background-image: url({{img_url cover_image}})">
     <div class="overlay5"></div>
<section class="hero is-transparent">
  <div class="hero-body">
    <div class="container">
     <div class="columns is-centered">


<div class="column has-text-centered">

{{!-- <a href="/"><img class="logo" src="{{img_url profile_image}}" alt=""></a> --}}
<a href="{{url}}">
<div class="profile-picture push-to-middle" style="background-image: url({{img_url profile_image}})"></div>
</a>

</div>

</div>

<div class="columns is-centered">
<div class="column is-two-fifths">
<br>
<h1 class="subtitle has-text-white has-text-centered">{{bio}}</h1>

<div class="has-text-centered">
        <ul class="is-size-3 has-text-white">
{{#if twitter}}<li class="navi-text"><a class="has-text-white" href="{{twitter_url}}" target="_blank"><i class="fab fa-twitter"></i></a></li>{{/if}}
{{#if facebook}}<li class="navi-text"><a class="has-text-white" href="{{facebook_url}}" target="_blank"><i class="fab fa-facebook"></i></a></li>{{/if}}
{{#if website}}<li class="navi-text"><a class="has-text-white" href="{{website}}" target="_blank"><i class="fas fa-globe"></i></a></li>{{/if}}
</ul>

</div>



</div>

</div>


</div>
    </div>
  </div>
</section>
</header>
</section>
  {{/primary_author}}


